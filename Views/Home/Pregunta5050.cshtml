@{
    ViewData["Title"] = "Jugar";
}

<div class="text-center">
    <img src="/img/preguntaFondo.jpg" style="z-index: 0; position:absolute; top:0; left:0; width:100vw; height:100vh;">
    <h1 style="position:absolute; top:10%; left:80%; color:white;">Jugador: @ViewBag.Player.Nombre</h1>
    @{
        string ImagenPozo = "/img/pozo" + (ViewBag.PosicionPozo+1) + ".png";
        <img src="@ImagenPozo" width="300px" style="position:absolute; top:15%; left:80%">
        <h1 style="position:absolute; top:61%; left:23%; color:white; font-size:24px;">@ViewBag.Pregunta.TextoPregunta</h1>
        int topR = 0, leftR = 0;
        foreach (Respuesta resp in ViewBag.ListaRespuestas)
        {
            bool respBorrada = false;
            string disabledAns = "btn text-decoration-none text-light";
            if (resp.OpcionRespuesta == 'A') { topR = 73; leftR = 25; }
            if (resp.OpcionRespuesta == 'B') { topR = 73; leftR = 60; }
            if (resp.OpcionRespuesta == 'C') { topR = 85; leftR = 25; }
            if (resp.OpcionRespuesta == 'D') { topR = 85; leftR = 60; }
            if (resp.OpcionRespuesta == ViewBag.VecIncorrectas[0] || resp.OpcionRespuesta == ViewBag.VecIncorrectas[1]) respBorrada = true;
            if (respBorrada) disabledAns = "btn btn-outline-light disabled";
            <a href='@Url.Action("PreguntaRespondida","Home", new {Opcion = resp.OpcionRespuesta})' class="@disabledAns"
            aria-disabled="@respBorrada" style="position:absolute; top:@topR%; left:@leftR%; font-size:32px; border:0;">@resp.TextoRespuesta</a>
        }
        string comodin50 = "/img/comodin50.png", comodinSkip = "/img/comodinSkip.png", comodinx2 = "/img/comodinx2.png";
        string disabled50 = "", disabledx2 = "", disabledSkip = "";
        string ariaDisabled50 = "false", ariaDisabledx2 = "false", ariaDisabledSkip = "false";
        if (ViewBag.Player.Comodin50 == false) { comodin50 = "/img/comodin50Disabled.png"; disabled50 = "disabled"; ariaDisabled50 = "true"; }
        if (ViewBag.Player.ComodinSaltear == false) { comodinSkip = "/img/comodinSkipDisabled.png"; disabledSkip = "disabled"; ariaDisabledSkip = "true"; }
        if (ViewBag.Player.ComodinDobleChance == false) { comodinx2 = "/img/comodinx2Disabled.png"; disabledx2 = "disabled"; ariaDisabledx2 = "true"; }
    }
    <a href='@Url.Action("Descartar50","Home")' class="btn @disabled50" aria-disabled="@ariaDisabled50"
        style="position:absolute; top: 10%; left:5%;"><img src="@comodin50" width="110px"></a>
    <a href='@Url.Action("DobleChance","Home")' class="btn @disabledx2" aria-disabled="@ariaDisabledx2"
        style="position:absolute; top: 10%; left:12%;"><img src="@comodinx2" width="105px"></a>
    <a href='@Url.Action("SaltearPregunta","Home")' class="btn @disabledSkip" aria-disabled="@ariaDisabledSkip"
        style="position:absolute; top: 10%; left:19%;"><img src="@comodinSkip" width="110px"></a>
</div>