@{
    ViewData["Title"] = "Jugar";
}

<div class="text-center">
    <img src="/img/preguntaFondo.jpg" style="z-index: 0; position:absolute; top:0; left:0; width:100vw; height:100vh;">
    <h1 style="position:absolute; top:10%; left:80%; color:white;">Jugador: @ViewBag.Player.Nombre</h1>
    @{
        int posPozo = 15, top = 20;
        string fontWeight, bgColor;
        foreach (Pozo pozo in ViewBag.ListaPozos)
        {
            if (pozo.ValorSeguro = true) fontWeight = "normal";
            else fontWeight = "bold";
            if (posPozo <= 5) bgColor = "lightgreen";
            else if (posPozo > 5 && posPozo <= 10) bgColor = "yellow";
            else bgColor = "red";
            <p style="position:absolute; top:@top%; left: 80%; background-color:@bgColor; color:black; font-weight:bold;">
                @posPozo - $@pozo.Importe</p>
            posPozo--;
            top += 2.5;
        }
        <h1 style="position:absolute; top:67%; left:40%; color:white;">@ViewBag.Pregunta.TextoPregunta</h1>
        int top = 0, left = 0;
        foreach (Respuesta resp in ViewBag.ListaRepsuestas)
        {
            if (resp.OpcionRespuesta = 'A') top = 75; left = 25;
            if (resp.OpcionRespuesta = 'B') top = 75; left = 60;
            if (resp.OpcionRespuesta = 'C') top = 87; left = 25;
            if (resp.OpcionRespuesta = 'D') top = 87; left = 60;
            <a href='@Url.Action("PreguntaRespondida","Home")' class="btn btn-outline-light"
            style="position:absolute; top:@top%; left:@left%; font-size:32px; border:0;">@resp.TextoRespuesta</a>
        }
    }
    <a href='@Url.Action("Comodin50","Home")' class="btn btn-secondary"
        style="position:absolute; top: 10%; left:10%; border:0; font-size:32px;">50/50</a>
    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#exampleModalCenter">
        Chance X2
    </button>
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog"
        aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">@ViewBag.Pregunta.TextoPregunta</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <form action='@Url.Action("PreguntaRespondida","Home")' method="POST">
                    <div class="modal-body">
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input" id="Opcion1" Name="Opcion1">
                            <label class="form-check-label" for="Opcion1">@resp.TextoRespuesta</label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Enviar" class="btn btn-success">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <a href='@Url.Action("ComodinSaltear","Home")' class="btn btn-secondary"
        style="position:absolute; top: 24%; left:10%; border:0; font-size:32px;">Saltear</a>
</div>